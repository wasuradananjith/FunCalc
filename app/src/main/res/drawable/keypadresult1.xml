<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape
            android:shape="oval">
            <gradient
                android:startColor="#0C90FF"
                android:centerColor="#92A9F7"
                android:endColor="#0C90FF"
                android:angle="180"/>
            <stroke
                android:width="2dp"
                android:color="#D4DBF3" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape
            android:shape="oval">
            <gradient
                android:startColor="#0C90FF"
                android:centerColor="#92A9F7"
                android:endColor="#0C90FF"
                android:angle="180" />
            <stroke
                android:width="2dp"
                android:color="#D4DBF3" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape
            android:shape="oval">
            <gradient
                android:startColor="#6100FF"
                android:endColor="#6100FF"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#D4DBF3" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
